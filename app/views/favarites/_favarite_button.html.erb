<% unless current_user == user %>
  <% if current_user.favarite?(user) %>
    <%= form_for(current_user.favarites.find_by(favarite_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :favarite_id, user.id %>
      <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favarites.build) do |f| %>
      <%= hidden_field_tag :favarite_id, user.id %>
      <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>